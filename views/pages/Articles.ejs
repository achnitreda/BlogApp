<%- include('../partials/sidebar'); %>
    <!-- start client -->
    <div class="container-fluid">
        <div class="row mt-4">
            <div class="col-md d-flex justify-content-between">
                <div class="">
                    <h3>Article List</h3>
                
                </div>
                <div class="">
                    <img class="" src="images/scroll.svg" alt="">
                    <a href="http://localhost:3000/addpost" class="btn btn-info text-white ">Add new article</a>
                </div>
            </div>
        </div>
        <hr>
        <div style="width: 99%; margin: auto;" class="row overflow-auto">
            <table class="table table-bordered" id="myTable">
                <thead>
                    <tr style="color: #acacac;">
                        <th scope="col">Title</th>
                        <th scope="col">Body</th>
                        <th scope="col">Categorie</th>
                        <th class="text-center">operation</th>
                    </tr>
                </thead>

                <tbody class="bg-white">

                    <% posts.forEach(function(post) { %>
                        
                        <th scope="row"><%= post.title %></th>
                        <td><%= post.body %></td>
                        <td><%= post.categorie %></td>
                        <td class="d-flex flex-row justify-content-end gap-1">
                    <form action="/articles/<%= post.id %>" class="mt-5" method="post">
                        <button type="submit" value=""  class="btn btn-outline-danger"><i class="bi bi-trash">Delete</i></button>
                    </form>

                    <form action="/articles/update/<%= post.id %>" class="mt-5" method="post">
                        <button type="submit" class="btn btn-outline-primary">Update</button>
                    </form>
                    


                        </td>
                    </tr>
                        <% }); %> 
                    
                </tbody>
            </table>
        </div>
    </div>
